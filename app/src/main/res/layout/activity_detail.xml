<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/MyToolbarStyle"
        app:title=" "/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageCard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        android:layout_centerVertical="true"
                        android:transitionName="ExampleTransition1"
                        android:layout_marginLeft="4dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimary">
                        <ImageView
                            android:id="@+id/avatar_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@color/green"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Example Name"
                            android:textSize="20dp"
                            android:fontFamily="@font/hkgrotesk_bold"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>
                        <TextView
                            android:id="@+id/dateAndTime_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="16dp"
                            android:layout_below="@id/layout_1"
                            android:textColor="@color/text_secondary"
                            android:text="sample text"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/caption_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@id/layout_1"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="sample text"/>

                <ImageView
                    android:id="@+id/image_detail"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:transitionName="ExampleTransition"
                    android:layout_below="@id/caption_detail"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/likeComment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 Likes, 4 comments.."
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/image_detail"/>

                <RelativeLayout
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="2dp"
                    android:layout_below="@id/likeComment_detail"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    >

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_heart_outline"
                        app:tint="@color/pale_red" />

                    <TextView
                        android:id="@+id/count_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:textSize="16dp"
                        android:textColor="@color/text_primary"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/like_btn"/>

                    <ImageView
                        android:id="@+id/comment_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_comment"
                        android:layout_toRightOf="@id/count_likes"
                        android:layout_marginLeft="25dp"
                        android:padding="3dp"
                        app:tint="@color/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:textSize="16dp"
                        android:textColor="@color/text_primary"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/comment_btn"/>

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_share"
                        android:layout_alignParentEnd="true"
                        android:padding="5dp"
                        app:tint="@color/purple" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/commentHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_below="@id/section"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="46dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/commentHeader"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>